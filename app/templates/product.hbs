<div class="container">
    <div class="row">
        <div class="col">
            <h2>{{model.name}}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <img src="{{model.image.url}}" alt="{{model.name}}" />
        </div>
        <div class="col-md-6">
            <h3>${{model.price}} </h3>
            <ul>
                {{#each model.traits as |trait|}}
                <li>{{trait}}</li>
                {{/each}}
            </ul>
                        <button class="btn btn-warning" {{action 'addToCart'}}>Add to cart</button>
      {{cart.items.length}} Items in cart
       </div>
    </div>
</div>

{{outlet}}