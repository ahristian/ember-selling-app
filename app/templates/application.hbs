<BsNavbar
@type="light"
  @justified={{false}}
  @stacked={{false}}
  @fill={{false}} 
@backgroundColor="warning"
 as |navbar|>
  <div class="navbar-header">
    {{navbar.toggle}}
    {{#link-to "index" class="navbar-brand pl-3" }}
      Selling Stuff{{/link-to}}
  </div>
  <navbar.content class="navbar-right">
    <navbar.nav as |nav|>
      <nav.item>
        <nav.link-to @route="index">Sell</nav.link-to>
      </nav.item>
        <nav.item>
        <nav.link-to @route="cart"> Shopping Cart
          <span class="badge">
            {{shoppingCart.items.length}}
                  </span>
          </nav.link-to>
      </nav.item>
    </navbar.nav>
  </navbar.content>
</BsNavbar>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <ul class="list-group">
                {{#each rootCategories as |category|}}
                <li class="list-group-item">{{category.name}}
                    <ul class="list-group">
                        {{#each category.children as |child|}}
                        <li class="list-group-item">{{child.name}}</li>
                        {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="col-md-9">
            {{outlet}}
        </div>
    </div>
</div>